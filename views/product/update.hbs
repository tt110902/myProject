<title>Edit Product</title>
<h1>Edit Product</h1>
<hr>
<form action="/products/updateProduct" enctype="multipart/form-data" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" class="form-control" value="{{product.name}}">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="text" name="price" id="price" class="form-control" value="{{product.price}}">
    </div>
    <div>
    <label for="category">Category</label>
        <select name="category" id="" class="form-control">
            {{#each categories}}
            <option {{selected _id ../product.category_id}} value="{{{_id}}}">{{{name}}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10">{{product.description}}
        </textarea>
    </div>
    <div class="form-group">
        <label for="price">Supplier</label>
        <input type="text" name="supplier" id="supplier" class="form-control" value="{{product.suppliers}}">
    </div>
    <div class="form-group">
        <label for="img">Image</label>
        <input type="file" name="img" id="img" class="form-control">
    </div>
    <img width="250" src="/uploads/{{{product.img}}}" alt="">
    <hr>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" name="submit" id="submit" value="Update">
    </div>
    <input type="hidden" name="old_img" value="{{{product.img}}}">
    <input type="hidden" name="id" value="{{{product._id}}}">
    <a href="/product/index" class="btn-btn-secondary">Back to index</a>
</form>
